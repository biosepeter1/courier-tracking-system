# Server Configuration
PORT=5000
NODE_ENV=development
ALLOWED_ORIGIN=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/courier-tracking

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
